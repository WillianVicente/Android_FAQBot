<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.chatapp.chatapp.view.MainActivity">

    <fragment
        android:id="@+id/mensagem_fragment"
        class="com.chatapp.chatapp.view.MessageFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/button_fragment"
        tools:layout="@layout/fragment_message" />

    <fragment
        android:id="@+id/button_fragment"
        class="com.chatapp.chatapp.view.ButtonFragment"
        tools:layout="@layout/fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
